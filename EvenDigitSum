public class EvenDigitSum {
    public static int getEvenDigitSum (int number){
        int sum =0;
        if (number<0){
            sum=-1;
        }
        else{
            while(number>0){
                int d=number%10;
                if(d%2==0){
                    sum+=d;
                }
                number=number/10;
            
        }
    } return sum;

}
}
